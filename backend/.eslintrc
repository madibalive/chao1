{
  "extends": [
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": [
      "./tsconfig.json",
      "./test/tsconfig.json"
    ]
  },
  "rules": {
    "max-len": ["error", {
      "code": 120
    }],
    "comma-dangle": "off",
    "import/prefer-default-export": "off",
    "no-multiple-empty-lines": ["error", {
      "max": 2
    }],
    "@typescript-eslint/lines-between-class-members": ["error", "always", {
      "exceptAfterSingleLine": true
    }]
  }
}
